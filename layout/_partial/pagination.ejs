<div class="container">
  <div class="row">
    <div class="span2 offset1 bitpager">
      <% if (page.prev){ %>
      <a href="<%- config.root %><%- page.prev_link %>">&larr; <%= __('prev') %></a>
      <% } %>
    </div>
    <div class="span2 offset7 bitpager">
      <% if (page.next){ %>
      <a href="<%- config.root %><%- page.next_link %>" class="pull-right"><%= __('next') %> &rarr;</a>
      <% } %>
    </div>
  </div>
</div>
